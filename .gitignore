#!**/tests/Config.toml
.services {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
  padding: 20px;
}

.service-card {
  background-color: #ffffff;
  border: 1px solid #ddd;
  border-radius: 12px;
  padding: 20px;
  width: 280px;
  box-shadow: 0 3px 8px rgba(0,0,0,0.08);
}

.service-card h3 {
  font-size: 1.3rem;
  color: #003566;
  margin-bottom: 10px;
}

.service-card p {
  font-size: 1.1rem;
  color: #0077b6;
  margin-bottom: 15px;
}

.service-card ul {
  text-align: left;
  list-style-type: disc;
  padding-left: 20px;
}

.service-card ul li {
  margin-bottom: 8px;
  color: #333;
  font-size: 0.98rem;
}

